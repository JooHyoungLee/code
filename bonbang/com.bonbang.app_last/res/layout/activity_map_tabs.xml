<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bonbang.app.activity.maps.MapActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="#faece1"
        android:orientation="vertical" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_line" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_weight="25"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="25"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_tab_1"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#faece1"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="지도" />

                <ImageView
                    android:id="@+id/iv_tab_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:scaleType="fitXY"
                    android:visibility="gone"
                    android:src="@drawable/default_line" />
            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="31dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_weight="25"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_tab_2"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#fff"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="지하철" />

                <ImageView
                    android:id="@+id/iv_tab_2"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_line" />
            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="31dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_weight="25"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_tab_3"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#fff"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="지역" />

                <ImageView
                    android:id="@+id/iv_tab_3"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_line" />
            </LinearLayout>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="31dp"
                android:scaleType="fitXY"
                android:src="@drawable/default_line" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_weight="25"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_tab_4"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="#fff"
                    android:gravity="center_vertical|center_horizontal"
                    android:text="조건" />

                <ImageView
                    android:id="@+id/iv_tab_4"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/default_line" />
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:scaleType="fitXY"
            android:src="@drawable/default_line" />
    </LinearLayout>

    <fragment
        android:id="@+id/map_fragment"
        android:name="com.bonbang.app.activity.maps.MapActivity"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="40dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" >

        <Button
            android:id="@+id/btn_map_all_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="이 지역 목록보기" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검색결과" />

            <TextView
                android:id="@+id/tv_map_all_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TextView" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>